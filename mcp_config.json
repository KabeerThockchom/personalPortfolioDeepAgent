{
  "mcpServers": {
    "portfolio-tools": {
      "command": "python3",
      "args": ["mcp_servers/portfolio_server.py"],
      "description": "Portfolio analysis tools - valuation, allocation, concentration risk, Sharpe ratio, rebalancing",
      "tools": [
        "calculate_portfolio_value",
        "calculate_asset_allocation",
        "calculate_concentration_risk",
        "calculate_sharpe_ratio",
        "check_rebalancing_needs",
        "generate_allocation_chart"
      ]
    },
    "market-data-tools": {
      "command": "python3",
      "args": ["mcp_servers/market_data_server.py"],
      "description": "Real-time market data from Yahoo Finance - quotes, fundamentals, historical data, news, SEC filings",
      "env": {
        "RAPIDAPI_KEY": "${RAPIDAPI_KEY}"
      },
      "tools": [
        "search_stocks",
        "get_stock_quote",
        "get_multiple_quotes",
        "get_stock_summary",
        "get_stock_chart",
        "get_stock_statistics",
        "get_stock_financials",
        "get_stock_balance_sheet",
        "get_stock_cashflow",
        "get_stock_earnings",
        "get_stock_profile",
        "get_stock_analysis",
        "get_upgrades_downgrades",
        "get_insider_transactions",
        "get_stock_holders",
        "get_esg_scores",
        "get_news_list",
        "get_sec_filings",
        "get_fund_profile"
      ]
    },
    "cashflow-tools": {
      "command": "python3",
      "args": ["mcp_servers/cashflow_server.py"],
      "description": "Cash flow analysis tools - income/expense tracking, savings rate, categorization, burn rate",
      "tools": [
        "analyze_monthly_cashflow",
        "calculate_savings_rate",
        "categorize_expenses",
        "project_future_cashflow",
        "calculate_burn_rate",
        "generate_waterfall_chart"
      ]
    },
    "goal-tools": {
      "command": "python3",
      "args": ["mcp_servers/goal_server.py"],
      "description": "Goal planning tools - retirement planning, Monte Carlo simulations, FIRE calculations, college funding",
      "tools": [
        "calculate_retirement_gap",
        "run_monte_carlo_simulation",
        "calculate_required_savings_rate",
        "calculate_fire_number",
        "project_college_funding",
        "generate_monte_carlo_chart"
      ]
    },
    "debt-tools": {
      "command": "python3",
      "args": ["mcp_servers/debt_server.py"],
      "description": "Debt management tools - payoff timelines, avalanche vs snowball, interest costs, DTI ratio",
      "tools": [
        "calculate_debt_payoff_timeline",
        "compare_avalanche_vs_snowball",
        "calculate_total_interest_cost",
        "optimize_extra_payment_allocation",
        "calculate_debt_to_income_ratio",
        "generate_payoff_chart"
      ]
    },
    "tax-tools": {
      "command": "python3",
      "args": ["mcp_servers/tax_server.py"],
      "description": "Tax optimization tools - effective tax rate, loss harvesting, Roth conversions, withdrawal sequencing",
      "tools": [
        "calculate_effective_tax_rate",
        "identify_tax_loss_harvesting_opportunities",
        "analyze_roth_conversion_opportunity",
        "optimize_withdrawal_sequence",
        "calculate_capital_gains_tax"
      ]
    },
    "risk-tools": {
      "command": "python3",
      "args": ["mcp_servers/risk_server.py"],
      "description": "Risk assessment tools - emergency fund, insurance gaps, volatility, stress testing, VaR",
      "tools": [
        "calculate_emergency_fund_adequacy",
        "analyze_insurance_gaps",
        "calculate_portfolio_volatility",
        "run_stress_test_scenarios",
        "calculate_value_at_risk",
        "analyze_concentration_risk",
        "generate_risk_dashboard"
      ]
    },
    "search-tools": {
      "command": "python3",
      "args": ["mcp_servers/search_server.py"],
      "description": "Web search tools using Tavily API - general search, news search, financial news",
      "env": {
        "TAVILY_API_KEY": "${TAVILY_API_KEY}"
      },
      "tools": [
        "web_search",
        "web_search_news",
        "web_search_financial"
      ]
    },
    "portfolio-update-tools": {
      "command": "python3",
      "args": ["mcp_servers/portfolio_update_server.py"],
      "description": "Portfolio update tools - buy/sell stocks, update cash, record expenses, update credit cards",
      "tools": [
        "update_investment_holding",
        "update_cash_balance",
        "record_expense",
        "update_credit_card_balance",
        "recalculate_net_worth"
      ]
    }
  }
}
